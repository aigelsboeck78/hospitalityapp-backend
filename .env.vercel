# Vercel Environment Variables for Backend
# Copy these to your Vercel project settings

# Database - Vercel Postgres (automatically provided when you connect storage)
# POSTGRES_URL=[automatically provided]
# POSTGRES_PRISMA_URL=[automatically provided]
# POSTGRES_URL_NON_POOLING=[automatically provided]
# POSTGRES_USER=[automatically provided]
# POSTGRES_HOST=[automatically provided]
# POSTGRES_PASSWORD=[automatically provided]
# POSTGRES_DATABASE=[automatically provided]

# Server Configuration
NODE_ENV=production
PORT=3001

# JWT Secrets (generate secure random strings)
JWT_SECRET=your-secure-jwt-secret-here-min-32-chars
REFRESH_TOKEN_SECRET=your-secure-refresh-token-secret-min-32-chars

# CORS Configuration
CORS_ORIGIN=https://hospitalityapp.chaletmoments.com
ALLOWED_ORIGINS=https://hospitalityapp.chaletmoments.com,https://chaletmoments.com

# Frontend URLs
FRONTEND_URL=https://hospitalityapp.chaletmoments.com
API_URL=https://hospitalityapp-backend.vercel.app

# Optional: OpenAI for recommendations
OPENAI_API_KEY=sk-...

# Optional: WhatsApp integration
WHATSAPP_API_KEY=
WHATSAPP_PHONE_NUMBER=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_TO_FILE=false

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/tmp/uploads