# Production Environment Variables for hospitalityapp.chaletmoments.com Backend

# Server Configuration
PORT=3001
NODE_ENV=production

# Database (Same Supabase as main app)
DATABASE_URL=postgresql://postgres:[PASSWORD]@db.xxxxxxxxx.supabase.co:5432/postgres
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_key

# CORS Configuration
CORS_ORIGIN=https://hospitalityapp.chaletmoments.com,https://chaletmoments.com
ALLOWED_ORIGINS=https://hospitalityapp.chaletmoments.com,https://chaletmoments.com

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
REFRESH_TOKEN_SECRET=your_refresh_token_secret

# API URLs
FRONTEND_URL=https://hospitalityapp.chaletmoments.com
API_URL=https://hospitalityapp.chaletmoments.com/api

# WebSocket Configuration
ENABLE_WEBSOCKET=true
WS_PORT=3001

# External Services
OPENAI_API_KEY=your_openai_api_key
WHATSAPP_API_KEY=your_whatsapp_api_key
WHATSAPP_PHONE_NUMBER=your_whatsapp_number

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_TO_FILE=true

# MDM Configuration (for Apple TV management)
MDM_SERVER_URL=https://hospitalityapp.chaletmoments.com
MDM_PUSH_CERTIFICATE_PATH=./certificates/mdm-push.p12
MDM_PUSH_CERTIFICATE_PASSWORD=your_certificate_password

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads